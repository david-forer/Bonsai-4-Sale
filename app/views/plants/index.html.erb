A List of Plants:


<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @plants.each do |plant| %>
        <tr>
            <td><%= plant.name %></td>
            <td><%= plant.description %></td>
            <td><%= plant.price %> </td>
        </tr>
        <% end %>
    </tbody>
</table>